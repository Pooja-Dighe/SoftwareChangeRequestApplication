@{
    // var roles = ViewData["Roles"] as IList<string>;
    ViewData["Title"] = "Create New Request";
    var roles = ViewBag.RoleName;
    var roleId = ViewBag.RoleId;
    var userId = ViewBag.UserId;
    var user = ViewBag.UserName;

}

@if (roles.Contains("User"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" autocomplete="off">
                <h2>Create New Request</h2>
                <hr/>             
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"> </div>
                <div class="form-floating mb-3">
                    <input asp-for="Title" class="form-control" autocomplete="off" />
                    <label asp-for="Title" class="form-label">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Description" class="form-control" autocomplete="off" />
                    <label asp-for="Description" class="form-label">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select id="dropdown" name="PriorityValue" asp-for="Priority" asp-items="@ViewBag.PriorityList" class="form-control" autocomplete="off">
                        <option value="PriorityValue">-- Select Priority --</option>
                    </select>
                     <label asp-for="Priority" class="form-label">Priority</label>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
        
                <div class="form-floating mb-3">
                    <input asp-for="DueDate" class="form-control" type="date" autocomplete="off" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <label asp-for="DueDate" class="form-label">Due Date</label>
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">                     
                    <input type="text" asp-for="ProjectName" class="form-control" id="ProjectName" name="ProjectName" value="@ViewBag.ProjectName" autocomplete="off" readonly />
                    <label asp-for="ProjectName" class="form-label">Project Name</label> <br />
                   <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="hidden"  asp-for="ProjectId" class="form-control" id="ProjectId" name="ProjectId" value="@ViewBag.ProjectId" autocomplete="off" readonly />
                    <label asp-for="ProjectId" class="form-label" style="display: none;">ProjectId</label>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="hidden" asp-for="UserId" class="form-control" name="UserId" style="display: none;" value="@userId" readonly />
                    <label asp-for="UserId" class="form-label" style="display: none;">UserId</label>
                    <span asp-validation-for="UserId" type="hidden" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="hidden" asp-for="RoleId" class="form-control" name="RoleId"  value="@roleId" readonly />
                    <label  asp-for="RoleId" class="form-label" style="display: none;">RoleId</label>
                    <span asp-validation-for="RoleId" type="hidden" class="text-danger"></span>
                </div>
                  


                @*    <div class="form-floating mb-3">
                <input asp-for="User" class="form-control" name="User" value="@user" />
                <label asp-for="User" class="form-label">User</label>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" asp-for="Role" class="form-control" name="Role" value="@roleName" readonly />
                <label asp-for="Role" class="form-label">Role</label>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div> *@


                <button type="submit" class="w-100 btn btn-lg btn-primary">Raise Request</button>
                <br /><br />
                <div class="col-md-1">
                   
                    <button type="submit" asp-action="Index" class="btn btn-outline-secondary">Back</button>
                </div>

            </form>
        </div>
    </div>
}


